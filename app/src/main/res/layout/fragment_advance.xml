<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
 <!--<include layout="@layout/perdiam_view"/>-->

 <LinearLayout
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:orientation="horizontal"
     android:weightSum="1"
     >

  <TextView
      android:layout_width="0dp"
      android:layout_height="@dimen/dp_40"
      android:layout_weight=".5"
      android:textColor="@color/c_grey"
      android:gravity="center"
      android:text="@string/estimated_perdiam"/>

  <TextView
      android:layout_width="0dp"
      android:layout_height="@dimen/dp_40"
      android:layout_weight=".5"
      android:textColor="@color/c_grey"
      android:text="1500"
      android:gravity="center"/>

 </LinearLayout>

 <LinearLayout
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:orientation="horizontal"
     android:weightSum="1"
     android:layout_marginTop="@dimen/sp_20">

  <TextView
      android:layout_width="0dp"
      android:layout_height="@dimen/dp_40"
      android:layout_weight=".5"
      android:gravity="center"
      android:textColor="@color/c_grey"
      android:text="@string/advance_request"/>
  <TextView
      android:layout_width="0dp"
      android:gravity="center"
      android:text="0"
      android:textColor="@color/c_grey"
      android:layout_height="@dimen/dp_40"
      android:layout_weight=".5"
      android:id="@+id/advanceAmount"
      />

 </LinearLayout>

 <SeekBar
     android:layout_width="match_parent"
     android:layout_height="@dimen/dp_20"
     android:id="@+id/seekbar"/>

 <LinearLayout
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:orientation="horizontal"
     android:weightSum="1"
     android:layout_marginTop="@dimen/sp_20">

  <TextView
      android:layout_width="0dp"
      android:layout_height="@dimen/dp_40"
      android:layout_weight=".4"
      android:gravity="center"
      android:textColor="@color/c_grey"
      android:text="@string/advance"/>
  <TextView
      android:layout_width="0dp"
      android:gravity="center"
      android:text="1050"
      android:textColor="@color/c_grey"
      android:layout_height="@dimen/dp_40"
      android:layout_weight=".3"
     />

  <RadioGroup
      android:layout_width="0dp"
      android:layout_height="@dimen/dp_60"
      android:layout_weight=".3"
      android:orientation="vertical">

   <RadioButton
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="Accept"
       android:textColor="@color/c_grey"
       android:id="@+id/accept"/>

   <RadioButton
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="Reject"
       android:textColor="@color/c_grey"
       android:id="@+id/reject"/>

  </RadioGroup>

  </LinearLayout>



 <LinearLayout
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:orientation="horizontal"
     android:weightSum="1"
     android:layout_marginTop="@dimen/sp_20">

  <TextView
      android:layout_width="0dp"
      android:layout_height="@dimen/dp_40"
      android:layout_weight=".4"
      android:gravity="center"
      android:textColor="@color/c_grey"
      android:text="@string/any_other_advance"/>
  <TextView
      android:layout_width="0dp"
      android:gravity="center"
      android:text="1050"
      android:textColor="@color/c_grey"
      android:layout_height="@dimen/dp_40"
      android:layout_weight=".3"/>



  <RadioGroup
      android:layout_width="0dp"
      android:layout_height="@dimen/dp_60"
      android:layout_weight=".3"

      android:orientation="vertical">

   <RadioButton
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="Accept"
       android:textColor="@color/c_grey"
       />

   <RadioButton
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="Reject"
       android:textColor="@color/c_grey"
       />

  </RadioGroup>

 </LinearLayout>
 <Button
     android:id="@+id/itinearySave"
     android:layout_width="@dimen/dp_100"
     android:layout_height="@dimen/dp_40"
     android:background="@drawable/button_bg"
     android:text="@string/go_next"
     android:layout_gravity="center|right"
     android:layout_marginRight="@dimen/dp_6"
     android:paddingRight="@dimen/dp_10"
     android:layout_marginTop="@dimen/dp_150"/>




</LinearLayout>