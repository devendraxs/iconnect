<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_height="match_parent"
    android:paddingLeft="@dimen/dp_10"
    android:paddingRight="@dimen/dp_10"
    android:layout_width="match_parent">
<LinearLayout

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"  >

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1">

    <CheckBox
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/same_day_return"
        android:textColor="@color/c_dark_blue"
        android:layout_weight=".5"
        android:buttonTint="@color/c_dark_blue"
        />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".5"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/dp_10"
                android:weightSum="1">

<!--
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_30"
                android:text="@string/start"
                android:layout_weight=".5"
                android:textStyle="bold"
                android:textColor="@color/c_dark_blue"/>
-->

                <TextView
                    android:id="@+id/start"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_30"
                    android:text="Start: Delhi"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:textColor="@color/c_grey"
                    android:background="@drawable/tv_bg"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                android:weightSum="1"
                android:layout_marginTop="@dimen/dp_10">

<!--
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_30"
                    android:text="@string/end"
                    android:layout_weight=".5"
                    android:textStyle="bold"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/c_dark_blue"/>
-->

                <TextView
                    android:id="@+id/end"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_30"
                    android:text="End: Delhi"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:background="@drawable/tv_bg"
                    android:textColor="@color/c_grey"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dp_30"
        android:layout_weight="1">

        <TextView
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_30"
            android:layout_weight=".4"
            android:textStyle="bold"
            android:textColor="@color/c_dark_blue"
            android:text="@string/project"/>

        <TextView
            android:id="@+id/project"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_30"
            android:layout_weight=".6"
            android:background="@drawable/tv_bg"
            android:textColor="@color/c_grey"
            android:gravity="center"
            android:layout_marginLeft="@dimen/dp_30"
           android:layout_marginRight="@dimen/dp_150"
            android:text="@string/project"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:orientation="horizontal"
        android:background="@drawable/tv_bg"
        android:weightSum="1">

        <TextView
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_40"
            android:layout_weight=".2"
            android:text="@string/date"
            android:gravity="center"
            android:id="@+id/tvDate"
            android:textColor="@color/c_grey"
            android:background="@drawable/tv_bg"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_40"
            android:layout_weight=".3"
            android:text="@string/destination"
            android:gravity="center"
            android:textColor="@color/c_grey"
            android:background="@drawable/tv_bg"/>

        <Spinner
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_40"
            android:layout_weight=".1"
            android:id="@+id/facilities"
            android:paddingRight="@dimen/dp_1"
            android:background="@drawable/fascilities"/>

       <!-- <ImageView
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_40"
            android:layout_weight=".1"
            android:paddingRight="@dimen/dp_1"
            android:id="@+id/facilities"
            android:src="@drawable/fascilities"/>-->

        <ImageView
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_40"
            android:paddingLeft="@dimen/dp_1"
            android:layout_weight=".1"
            android:paddingRight="@dimen/dp_1"
            android:src="@drawable/plus"
            android:id="@+id/plus"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_40"
            android:layout_weight=".1"
            android:paddingRight="@dimen/dp_1"
            android:src="@drawable/minus"
            android:id="@+id/minus"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_40"
            android:layout_weight=".1"
            android:paddingRight="@dimen/dp_1"
            android:paddingLeft="@dimen/dp_1"
            android:id="@+id/official"
            android:src="@drawable/official"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_weight=".1"
            android:paddingLeft="@dimen/dp_1"
            android:paddingRight="@dimen/dp_1"
            android:layout_height="@dimen/dp_40"
            android:src="@drawable/via"
            android:id="@+id/via"/>
    </LinearLayout>


    <Button
        android:id="@+id/itinearySave"
        android:layout_width="@dimen/dp_100"
        android:layout_height="@dimen/dp_40"
        android:background="@drawable/button_bg"
        android:text="@string/go_next"
        android:layout_gravity="center|right"
        android:layout_marginRight="@dimen/dp_6"
        android:paddingRight="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_200"/>

<!--
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dp_60"
        android:weightSum="1">

        <Button
            android:id="@+id/itinearySave"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:background="@drawable/button_bg"
            android:layout_weight=".5"
            android:text="@string/go_next"
         android:layout_gravity="center|right"
            android:layout_marginRight="@dimen/dp_6"
            android:paddingRight="@dimen/dp_10"/>

     &lt;!&ndash;   <Button
            android:id="@+id/itinearySubmit"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:layout_weight=".5"
            android:background="@drawable/button_bg"
         android:layout_marginLeft="@dimen/dp_6"
            android:text="@string/submit" />&ndash;&gt;

    </LinearLayout>
-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/dp_100"
        android:layout_alignParentBottom="true"
        >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:orientation="horizontal"    >

       <!-- <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_40"
            android:text="@string/fascilities"
            android:layout_marginLeft="@dimen/dp_3"
            android:layout_marginRight="@dimen/dp_3"
            android:textColor="@color/c_grey"
            android:gravity="center"
            android:drawableLeft="@drawable/facilities"/>-->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_40"
            android:text="@string/fascilities"
            android:layout_marginLeft="@dimen/dp_3"
            android:layout_marginRight="@dimen/dp_3"
            android:paddingTop="@dimen/dp_3"
            android:paddingBottom="@dimen/dp_3"
            android:textColor="@color/c_grey"
            android:gravity="center"
            android:drawableLeft="@drawable/facilities"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_40"
            android:text="@string/add_travel"
            android:layout_marginLeft="@dimen/dp_3"
            android:layout_marginRight="@dimen/dp_3"
            android:textColor="@color/c_grey"
            android:gravity="center"
            android:drawableLeft="@drawable/plus"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_40"
            android:layout_marginRight="@dimen/dp_3"
            android:layout_marginLeft="@dimen/dp_3"
            android:textColor="@color/c_grey"
            android:gravity="center"
            android:text="@string/remove_travel"
            android:drawableLeft="@drawable/minus"/>




    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_40"
            android:layout_marginRight="@dimen/dp_3"

            android:text="@string/personal_travel"
            android:textColor="@color/c_grey"
            android:gravity="center"
            android:drawableLeft="@drawable/official"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_40"
            android:text="@string/via"
            android:textColor="@color/c_grey"
            android:gravity="center"
            android:layout_marginLeft="@dimen/dp_3"

            android:drawableLeft="@drawable/via"/>

    </LinearLayout>


    </LinearLayout>
</LinearLayout>
</ScrollView>